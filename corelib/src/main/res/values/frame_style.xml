<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  tabbottombar - 底部Item布局样式 -->
    <style name="style_tabbar_item_layout" parent="style_common_matchparent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--  titlebar - 标题栏底部线样式 -->
    <style name="style_tiltebar_bottomline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_up_shadow_height</item>
        <item name="android:background">@color/color_b2b2b2</item>
    </style>


    <!--  button 自定义按钮样式 -->
    <style name="common_btn_weight" parent="style_common">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_32</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/frame_bg_dialog_button</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--首页- tab按钮-->
    <style name="style_home_tabbutton" parent="style_common">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/h34dip</item>
        <item name="android:layout_marginBottom">@dimen/h21dip</item>
        <item name="android:drawablePadding">@dimen/h21dip</item>
    </style>

</resources>
